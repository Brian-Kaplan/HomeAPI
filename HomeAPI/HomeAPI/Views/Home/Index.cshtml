        url: 'api/device',
        dataType: "json",
        success: function (data) {
            $(data).each(function (i, item) {
                $('#devices').append('<li>' + item.Name + " " + item.Id + '</li>');
  
            });
        },
        error: function () {
            alert('error handing here');
        }
    });
});

